<h2>Listing posts</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Tools</th>
    </tr>
  </thead>
  <tbody>
<%= for post <- @posts do %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body  %></td>
      <td class="text-right">
        <%= link  "Show", to: post_path(@conn, :show_share,  post) %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

