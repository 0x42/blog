<h2>Show post</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @post.body %>
  </li>

</ul>

<%= link "Back", to: post_path(@conn, :index_share) %>

<%= render "comments.html", post: @post %>
<p><b>## Add Comment:</b></p>
<%= render "comment_form.html", post: @post, changeset: @changeset, action: post_path(@conn, :add_comment, @post) %>
